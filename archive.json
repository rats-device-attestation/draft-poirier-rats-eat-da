      "baseRefName": "main",
      "baseRefOid": "73851fdbb455f635325f70e43dc93fa69e685291",
      "headRepository": "thomas-fossati/draft-eat-da",
      "headRefName": "measurements-v2",
      "headRefOid": "c9d39e7220255128e9400c44db34a35991225d59",
      "closedAt": null,
